# ====================================
# BULLMONEY.ONLINE - Environment Variables
# ====================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# --- PUBLIC (Safe for Browser) ---
# These variables are exposed to the browser (prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_GETFORM_ENDPOINT=https://getform.io/f/your_endpoint
NEXT_PUBLIC_GAS_URL=https://script.google.com/macros/s/your_script_id/exec
NEXT_PUBLIC_BASE_URL=https://www.bullmoney.shop

# Stripe Publishable Key (Safe for browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# --- ADMIN CONFIG ---
# Admin email (public — used for UI checks like showing admin buttons)
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com
# Admin password — server-side only, validated via /api/admin/login
ADMIN_PASSWORD=your_secure_password_here
# Admin PIN - should be a strong, unique value (consider using a hash in production)
NEXT_PUBLIC_ADMIN_PIN=your_secure_pin_here

# --- SERVER SIDE ONLY ---
# These variables are NEVER exposed to the browser
# Only use these in API routes (app/api/...) or server components

# Supabase Service Role Key (Admin operations)
# CRITICAL: This key has full database access - keep it secret!
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Stripe Secret Keys
# CRITICAL: Never expose these to the client!
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Skrill Payment Gateway
# Get credentials at https://account.skrill.com/signup
SKRILL_MERCHANT_EMAIL=your_skrill_merchant_email@example.com
SKRILL_SECRET_WORD=your_skrill_secret_word_here
SKRILL_API_PASSWORD=your_skrill_api_password_here

# Crypto Payment Verification
# Optional: Custom RPC URLs for faster/private blockchain queries
# ETH_RPC_URL=https://eth.llamarpc.com
# SOL_RPC_URL=https://api.mainnet-beta.solana.com
# BSC_RPC_URL=https://bsc-dataseed1.binance.org
# BASE_RPC_URL=https://mainnet.base.org
# Protect the /api/crypto-payment/verify cron endpoint (recommended)
CRON_SECRET=your_random_cron_secret_here
# Admin API token for /api/crypto-payment/admin (secure random string)
# ADMIN_API_TOKEN=your_secure_random_token_here
# Crypto data encryption key (32 bytes hex or base64)
CRYPTO_DATA_ENCRYPTION_KEY=your_32_byte_key_here
# Dev-only crypto test helpers (disabled in production)
# DEV_CRYPTO_TEST_MODE=true
# DEV_CRYPTO_TEST_KEY=your_dev_test_key_here

# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=app-name
MONGODB_DB=your_database_name

# CoinMarketCap API Key
CMC_API_KEY=your_cmc_api_key_here

# Email Service Keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SMTP_PASS=your_smtp_password_here

# CryptoPanic News API Token
CRYPTOPANIC_TOKEN=your_cryptopanic_token_here

# MetaAPI Configuration (https://metaapi.cloud/)
# Sign up at https://app.metaapi.cloud/sign-up to get your API token

# Required: Your MetaAPI token from https://app.metaapi.cloud/token
METAAPI_TOKEN=your_metaapi_token_here

# Optional: Region (default: new-york)
# Options: new-york, london, singapore, mumbai, frankfurt, tokyo, sao-paulo
METAAPI_REGION=new-york

# Optional: Enable debug logging
METAAPI_DEBUG=false

# ====================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ====================================
# Before deploying to production, ensure:
#
# 1. ✅ SUPABASE_SERVICE_ROLE_KEY is set (required for admin operations)
# 2. ✅ MONGODB_URI points to production database
# 3. ✅ METAAPI_TOKEN is set (required for MT4/MT5 broker integration)
# 3. ✅ All API keys are production keys (not test keys)
# 4. ✅ NEXT_PUBLIC_BASE_URL is set to your production domain
# 5. ✅ ADMIN_PIN is a strong, unique value
# 6. ✅ .env.local is added to .gitignore
# 7. ✅ All secrets are stored securely (not in version control)
#
# SECURITY NOTES:
# - Never expose SUPABASE_SERVICE_ROLE_KEY to the client
# - Rotate API keys regularly
# - Use environment-specific keys (dev/staging/prod)
# - Monitor API key usage for unusual activity

# Telegram Bot Tokens
# Main BullMoney Telegram Bot (for channel posts & notifications)
TELEGRAM_BOT_TOKEN=your_main_telegram_bot_token_here

# Casino Telegram Bot (for casino account linking & bonuses)
CASINO_TELEGRAM_BOT_TOKEN=your_casino_telegram_bot_token_here

# Push Notifications (Web Push)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPIR_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@bullmoney.com

# --- CASINO INTEGRATION ---
# Casino URL - iframe source (visible to client browser)
# Production: Your deployed Render.com URL (e.g., https://bullmoney-casino.onrender.com)
# Dev: /casino-games (proxied through Next.js to localhost:8000)
NEXT_PUBLIC_CASINO_URL=https://bullmoney-casino.onrender.com

# Casino Backend URL (server-side only - for dev proxy)
# Only used in development when running casino backend locally
# Production doesn't need this - uses NEXT_PUBLIC_CASINO_URL directly
CASINO_BACKEND_URL=http://localhost:8000
