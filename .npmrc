# NPM Configuration - Cross-platform optimized
legacy-peer-deps=true
loglevel=error

# Performance optimizations
engine-strict=true
fetch-retry-maxtimeout=60000
fetch-retry-mintimeout=10000

# Apple Silicon (M1/M2/M3) optimizations
# Force native ARM64 binaries when available
arch=arm64

# Windows optimizations
# Use shorter paths to avoid Windows path length limits
cache-min=3600

# All platforms - faster installs
prefer-offline=true
auto-install-peers=true
strict-peer-dependencies=false
