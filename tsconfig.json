{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2022",
    // COMPILATION SPEED: Skip type checking for faster dev builds
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "static-app",
    "my-app",
    "portfolio-overlay",
    "Bullcasino",
    "casino-backend",
    "components/studio/**/*",
    "app/design/**/*",
    "CASINO_PAGE_EXAMPLES.tsx",
    "COMPLETE_SECTION_EXAMPLE.tsx",
    "ENHANCED_SETTINGS_MODAL.tsx"
  ]
}
