# ====================================
# BULLCASINO PRODUCTION ENVIRONMENT
# ====================================
# Copy these values to your deployment platform (Render, Heroku, etc.)
# DO NOT commit actual production values to git

APP_NAME="BullMoney Casino"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://bullmoney-casino.onrender.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database - SQLite is fine for demo casino
# Database file will be in database/database.sqlite
DB_CONNECTION=sqlite

# Alternative: Use PostgreSQL from Render
# DB_CONNECTION=pgsql
# DB_HOST=your-db-host.render.com
# DB_PORT=5432
# DB_DATABASE=your_database_name
# DB_USERNAME=your_username
# DB_PASSWORD=your_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=bullmoneytraders@gmail.com
MAIL_PASSWORD=your_smtp_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="support@bullmoney.shop"
MAIL_FROM_NAME="BullMoney Casino"

# ====================================
# CASINO DEMO MODE CONFIGURATION
# ====================================
# CRITICAL: Keep this TRUE for legal compliance
CASINO_DEMO_MODE=true

# Starting balance for new users (demo currency only)
CASINO_STARTING_BALANCE=10000

# Disable real money features
CASINO_ALLOW_DEPOSITS=false
CASINO_ALLOW_WITHDRAWALS=false
CASINO_REAL_MONEY=false

# Site info
SITE_NAME="BullMoney Games"
SITE_URL="https://bullmoney.shop"
SUPPORT_EMAIL="support@bullmoney.shop"

# Legal compliance
AGE_RESTRICTION=18
LEGAL_NOTICE="Demo games only. No real money gambling. Entertainment purposes. 18+ only."

# CORS Configuration - Set to your parent app domains
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://www.bullmoney.shop,https://bullmoney.shop,https://www.bullmoney.online,https://bullmoney.online

# ====================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ====================================
# Before deploying to production:
#
# 1. ✅ Generate new APP_KEY: php artisan key:generate
# 2. ✅ Set APP_ENV=production
# 3. ✅ Set APP_DEBUG=false
# 4. ✅ Update APP_URL to your Render URL
# 5. ✅ Verify CASINO_DEMO_MODE=true
# 6. ✅ Set CORS_ALLOWED_ORIGINS to actual parent domains
# 7. ✅ Run migrations: php artisan migrate --force
# 8. ✅ Cache config: php artisan config:cache
# 9. ✅ Cache routes: php artisan route:cache
# 10. ✅ Ensure storage directory is writable
#
# SECURITY NOTES:
# - Never set APP_DEBUG=true in production
# - Keep APP_KEY secret and unique per environment
# - Regularly backup your SQLite database
# - Monitor error logs for issues
